
<h1>Edit Station</h1>
<form action="/stations/<%= @station.id %>" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label>Station Name</label>
    <input class="form-control" type="text" name="stations[name]" value="<%= @station.name %>">
  </div>
  <div class="form-group">
    <label>Dock Count</label>
    <input class="form-control" type="integer" name="stations[dock_count]" value="<%= @station.dock_count %>">
  </div>
  <div class="form-group">
    <label>City</label>
    <input class="form-control" type="text" name="stations[city]" value="<%= @station.city.id %>">
  </div>
  <div class="form-group">
    <label>Installation Date</label>
    <input class="form-control" type="datetime" name="stations[instllation_date]" value="<%= @station.installation_date %>">
  </div>

  <input class="btn btn-warning" type="submit" value="Update">
</form>
